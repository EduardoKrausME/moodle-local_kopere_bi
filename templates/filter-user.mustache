<div id="chart-user-button-open" style="display: none"
     data-urlajax="{{{url_ajax}}}"
     data-urlclick="{{{url_click}}}"
     data-strclose="{{#str}}close,admin{{/str}}">
    <span>{{#str}}defaultcoursestudent{{/str}}:</span>
    <span class="select">
        {{{user_fullname}}}
    </span>
</div>
<div id="chart-user-datatable-select" style="display:none;"
     title="{{#str}}reports_selectuser,local_kopere_bi{{/str}}">
    <table id="datatable_user_select" class="table table-hover">
        <thead>
        <tr>
            <th class="text-center th_id">#</th>
            <th class="text-center th_fullname">{{#str}}user_table_fullname,local_kopere_dashboard{{/str}}</th>
            <th class="text-center th_username">{{#str}}user_table_username,local_kopere_dashboard{{/str}}</th>
            <th class="text-center th_email">{{#str}}user_table_email,local_kopere_dashboard{{/str}}</th>
        </tr>
        </thead>
        <tbody class="hover-pointer"></tbody>
    </table>
</div>
