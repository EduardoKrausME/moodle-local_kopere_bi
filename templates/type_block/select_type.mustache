{{!
    @template local_kopere_bi/type_block/select_type

    Example context (json):
    {
        "title": "Title",
        "description": "Description",
        "link": "https://moodle.org/",
        "id": "123456"
    }
}}

<div class="type-chart">
    <div class="type-chart-text">
        <h4 class="block-title select_type">{{{title}}}</h4>
        <p>{{{description}}}</p>
        <a href="{{{link}}}"
           class="btn btn-info">{{#str}}use_this_type,local_kopere_bi{{/str}}</a>
    </div>
    <div class="type-chart-chart" id="chart-{{{id}}}"></div>
</div>
