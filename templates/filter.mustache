{{!
    @template local_kopere_bi/filter

    Example context (json):
    {
      "btn-title": "users",
      "btn-subtitle": "Jo√£o da Silva",
      "url-ajax": "https://example.com/user_ajax_endpoint",
      "url-click": "https://example.com/user_click_endpoint",
      "table-title": "Select user"
    }
}}

<div id="{{{popupid}}}-btn-open"
     style="display:none"
     data-urlajax="{{{url-ajax}}}"
     data-urlclick="{{{url-click}}}"
     title="{{{table-title}}}">
    <span>{{{btn-title}}}:</span>
    <span class="select">
        {{{btn-subtitle}}}
    </span>
</div>
<div id="{{{popupid}}}-datatable-select"
     class="datatable-select"
     style="display:none;">
    <table id="{{{popupid}}}-table" class="table table-hover">
        <thead>
        <tr>
            {{#cols}}
                <th class="text-center th_{{{id}}}"
                    {{#style}} {{{style}}} {{/style}}
                >{{{name}}}</th>
            {{/cols}}
        </tr>
        </thead>
        <tbody class="hover-pointer"></tbody>
    </table>
</div>
