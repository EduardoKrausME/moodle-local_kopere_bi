{{!
    @template biblocks_html/preview

    Example context (json):
    {
      "element_id": "12345",
      "ajax_url": "https://example.com/chart_data",
      "error_data_loader": "Erro ao carregar os dados do gr√°fico",
      "reload_time": "60000"
    }

}}

<div class="area-chart" id="chart_{{element_id}}"></div>

{{#js}}
    require(["jquery", "core/notification"], function($, Notification) {

        function loadDataChart() {
            $.ajax({
                dataType: "json",
                url: "{{{ajax_url}}}",
                success: function(json) {
                    $("#chart_{{element_id}}").html(json.html);
                },
                error: function() {
                    $("#chart_{{element_id}}").html("{{error_data_loader}}");
                    Notification.exception({message: "{{error_data_loader}}"});
                }
            });
        }

        loadDataChart();

        var reloadTime = parseInt("{{{reload_time}}}");
        if (reloadTime) {
            setInterval(loadDataChart, reloadTime);
        }
    });
{{/js}}
